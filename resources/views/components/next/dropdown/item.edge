@if (type === 'button')
  <button @click="open = false; {{ onClick }}" class="w-full block px-4 py-2 text-sm leading-5 rounded-lg text-slate-700 hover:bg-slate-100 focus:outline-none focus:bg-slate-100 dark:hover:bg-slate-700 dark:text-slate-400 transition duration-150 ease-in-out {{ className }}">
    {{{ await $slots.main() }}}
  </button>
@else 
  <a href="{{ href }}" class="block px-4 py-2 text-sm leading-5 rounded-lg text-slate-900 hover:bg-slate-100 focus:outline-none focus:bg-slate-100 dark:hover:bg-slate-900  dark:hover:bg-opacity-10 dark:text-slate-400 transition duration-150 ease-in-out {{ className }}">
    {{{ await $slots.main() }}}
  </a>
@endif
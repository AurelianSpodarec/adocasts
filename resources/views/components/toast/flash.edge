<div id="toastFlash" up-hungry>
  @if(success || flashMessages.has('success'))
      <div 
          x-data="{ type: 'success', message: {{ js.stringify(success || flashMessages.get('success')) }} }"
          x-init="toast(message, { type })"
      ></div>
  @endif

  @if(info || flashMessages.has('info'))
      <div 
          x-data="{ type: 'info', message: {{ js.stringify(info || flashMessages.get('info')) }} }"
          x-init="toast(message, { type })"
      ></div>
  @endif

  @if(error || flashMessages.has('error'))
      <div 
          x-data="{ type: 'error', message: {{ js.stringify(error || flashMessages.get('error')) }} }"
          x-init="toast(message, { type })"
      ></div>
  @endif

  @if(warning || flashMessages.has('warning'))
      <div 
          x-data="{ type: 'warning', message: {{ js.stringify(warning || flashMessages.get('warning')) }} }"
          x-init="toast(message, { type })"
      ></div>
  @endif
</div>
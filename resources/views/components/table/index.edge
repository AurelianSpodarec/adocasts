@let(columns = [])

@inject({ columns })

@let(mainSlot = await $slots.main())


<div class="overflow-x-auto">
  <table class="table">
    <thead>
      <tr>
        @each (column in columns)
          @if (column.headSlot)
            <th>
              {{{ await column.headSlot({ column }) }}}
            </th>
          @else
            <th>{{ column.title }}</th>
          @endif
        @endeach
      </tr>
    </thead>
    <tbody>
      @each (row in rows)
        <tr>
          @each (column in columns)
            <td>
              @if (column.cellSlot)
                {{{ await column.cellSlot({ row, column }) }}}
              @else
                @if (typeof column.format === 'function')
                  {{ column.format(row[column.field], row) }}
                @else
                  {{ row[column.field] }}
                @endif
              @endif
            </td>
          @endeach
        </tr>
      @endeach
    </tbody>
  </table>
</div>

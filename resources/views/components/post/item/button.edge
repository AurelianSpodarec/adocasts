@button({ href: item.routeUrl, class: 'bg-white border-white !justify-start flex-nowrap', classInner: '!gap-4', size: 'sm' })
  <div class="w-24">
    @!post.picture({ item, class: 'h-full', lazy: lazyItem, progression: false })
  </div>
  <div class="flex-1">
    <object>
      @!post.seriesBar({ item })
    </object>
    <h4 class="font-bold text-base">
      {{ item.title }}
    </h4>
  </div>
@end
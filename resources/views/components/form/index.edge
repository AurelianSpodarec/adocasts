<form 
  @if (upSubmit)
    up-submit
    up-scroll="preserve"
    up-layer="root"
  @elseif (target)
    up-submit
    up-scroll="preserve"
    up-target="[{{ target }}]"
    {{ target }}
  @endif

  @if (loadable)
    x-data="{ sending: false }"
    @submit="sending = true"
  @endif

  {{ $props.except(['upSubmit', 'target', 'fragment']).merge({ method: 'POST' }).toAttrs() }}>
  {{ csrfField() }}

  @if (turnstile)
    @!turnstile()
  @endif

  @if (fragment)
    <input type="hidden" name="fragment" value="{{ fragment }}" />
  @endif

  {{{ await $slots.main() }}}
</form>
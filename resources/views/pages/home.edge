<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      AdonisJS - A fully featured web framework for Node.js
    </title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:ital,wght@0,300..900;1,300..900&family=Red+Hat+Mono:ital,wght@0,300..700;1,300..700&display=swap" rel="stylesheet">

    @vite(['resources/css/app.css', 'resources/js/app.js'])
    @stack('dumper')
  </head>
  <body>
    @!header({ plain: true })
    
    <section class="mt-8">
      @!hero.dropTheGlue()
    </section>

    <section class="pb-8 pt-16 -mt-8 flex flex-col items-center bg-gradient-to-b from-base-100 to-base-200">
      <h3 class="text-2xl font-black mb-3">
        We'll Be Here When You're Ready!
      </h3>
      <div class="stats stats-lg">
        @!stat.large({
          color: 'text-primary',
          icon: 'solar:video-library-bold-duotone',
          stat: '375+',
          title: 'An Ever Growing Library',
          desc: 'Lessons Available'
        })

        @!stat.large({
          color: 'text-secondary',
          icon: 'solar:star-rainbow-bold-duotone',
          stat: '24k+',
          title: 'So Much Learning',
          desc: 'Member Completed Lessons'
        })

        @!stat.large({
          color: 'text-accent',
          icon: 'solar:rocket-2-bold-duotone',
          stat: '3k+',
          title: 'Join Thousands of Others',
          desc: 'Free & Plus Members'
        })

        @!stat.large({
          color: 'text-info',
          icon: 'solar:chat-round-like-bold-duotone',
          stat: '775+',
          title: 'Hop Into the Discussion',
          desc: 'Comments Contributed'
        })
      </div>
    </section>

    <section class="mt-8">
      
    </section>
  </body>
</html>
